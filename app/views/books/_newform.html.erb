<%= form_for(book) do |f| %>
	<% if book.errors.any? %>
	<%= book.errors.count%>errors
	  <% book.errors.full_messages.each do |msg| %>
	  	<%= msg %>
	  <% end %>
	<% end %>

	<div class="field row">
		<%= f.label :Title %>
		<%= f.text_field :title, class: "col-xs-12 book_title", value: '' %>
	</div>

	<div class="field row">
		<%= f.label :Opinion %> <!-- ここを変更 -->
		<%= f.text_area :body, class: "col-xs-12 book_body", value: '' %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>